{
  "name": "@elm-tooling/elm-language-server",
  "description": "Implementation of an elm language server in node.",
  "version": "2.0.3",
  "author": "Kolja Lampe",
  "license": "MIT",
  "main": "./out/module.js",
  "files": [
    "out"
  ],
  "engines": {
    "node": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/elm-tooling/elm-language-server"
  },
  "dependencies": {
    "chokidar": "^3.5.1",
    "escape-string-regexp": "^4.0.0",
    "execa": "^5.0.0",
    "fast-diff": "^1.2.0",
    "globby": "^11.0.2",
    "pjson": "1.0.9",
    "reflect-metadata": "^0.1.13",
    "source-map": "^0.7.3",
    "ts-debounce": "^2.3.0",
    "tsyringe": "^4.4.0",
    "vscode-languageserver": "^7.0.0",
    "vscode-languageserver-textdocument": "1.0.1",
    "vscode-uri": "^3.0.2",
    "web-tree-sitter": "^0.17.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/node": "14.14.25",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "copyfiles": "^2.4.1",
    "doctoc": "^2.0.0",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "jest-mock-extended": "^1.0.13",
    "prettier": "^2.2.1",
    "tree-sitter-cli": "^0.17.1",
    "tree-sitter-elm": "^4.4.0",
    "ts-jest": "^26.5.1",
    "ts-node": "^9.1.1",
    "typescript": "4.1.3"
  },
  "scripts": {
    "version-patch": "npm --no-git-tag-version version patch",
    "version-minor": "npm --no-git-tag-version version minor",
    "version-major": "npm --no-git-tag-version version major",
    "version": "npm i && npm run compile",
    "copy-wasm": "copyfiles ./tree-sitter-elm.wasm out && copyfiles ./tree-sitter-javascript.wasm out",
    "compile": "npm run copy-wasm && tsc -p ./",
    "watch": "npm run copy-wasm && tsc -watch -p ./",
    "lint": "eslint -c .eslintrc.js --ext .ts src",
    "build-tree-sitter": "tree-sitter build-wasm ./node_modules/tree-sitter-elm",
    "test": "jest --coverage",
    "generate-toc": "doctoc README.md"
  },
  "bin": {
    "elm-language-server": "./out/index.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "elm",
    "elm-lang",
    "language server",
    "language-server",
    "lsp"
  ]
}
